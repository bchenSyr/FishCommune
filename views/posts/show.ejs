<% include ../partials/headerForShow %>

<div class="container">
    <div class="row my-3">
        <!--Comment Section-->
        <div class="col-md-5">
            <!--Make a Comment Form-->
            <form action="/campgrounds/<%=post._id%>/comments" method="POST">
                <div class="form-group row align-items-center">
                    <div class="col-md-12">
                        <textarea class="form-control" type="text" name="comment[text]" rows="4"
                            placeholder="Make a comment"></textarea>
                    </div>
                </div>
                <div class="form-group d-flex">
                    <div class="d-flex offset-8">
                        <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                    </div>
                </div>
            </form>
            <!--Comment List-->
            <p class="lead">Comment</p>
            <% post.comments.forEach(function(comment){ %>
                <div class="list-group">
                    <li class="list-group-item my-1"><%= comment.text %> </li>
                    <!--<li class="list-group-item">Infor 2</li>-->
                    <!--<li class="list-group-item">Infor 3</li>-->
                </div>
            <% }) %>
            
        </div>
        
        <!--Post Section-->
        <div class="col-md-7">
            <div class="card" style="width: 30rem;">
              <img class="card-img-top" src="<%= post.image %>">
              <div class="card-body">
                <h4><a> <%=post.name%> </a></h4>
                <p><%= post.description %></p>
            </div>
        </div>
    </div>
    </div>
</div>

<% include ../partials/footer %>